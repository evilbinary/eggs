]


if env['ARCHTYPE']=='arm':
    source+= [
        'arm/cpu.c'
    ]
elif env['ARCHTYPE']=='x86':
    source+= [
        'x86/cpu.c',
        'x86/fixed_dsp_init.c',
        'x86/float_dsp_init.c',                                          \
        'x86/lls_init.c'
    ]
else:
    print('libavutil not support',env['ARCHTYPE'])

if env.get('MYLIB'):
    source.append(env.get('MYLIB'))


source+= [
    ]+env['LIBC']

env.Library('avutil', source,
    CFLAGS='$CFLAGS  $LIBCFLAGS -Iapp/libffmpeg/  ',)
