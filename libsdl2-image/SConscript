import os

Import('libEnv')
env=libEnv

cflags=' -Ieggs/libgui/ \
        -Ieggs/libjpeg/ \
        -Ieggs/libsdl2/ \
        -Ieggs/libsdl2/include \
        -I. \
        -Ieggs/libpng/ \
        -Ieggs/libwebp/src \
        -DSDL_IMAGE_USE_COMMON_BACKEND \
		-DLOAD_BMP -DLOAD_GIF -DLOAD_LBM -DLOAD_PCX -DLOAD_PNM \
		-DLOAD_SVG -DLOAD_TGA -DLOAD_XCF -DLOAD_XPM -DLOAD_XV \
		 -DLOAD_PNG -DLOAD_WEBP\
        -DLOAD_JPG  -DFAST_IS_JPEG\
        ' #-DNEED_SHORT_EXTERNAL_NAMES

source=[]

source+=Glob('*.c')

source +=[

    # '../libpng/libpng.a',
    # '../libgui/libimage.a',
    # '../libgui/libgui.a',
    # '../libsdl2/libsdl2.a',
    # '../libzlib/libzlib.a',
    # '../libwebp/libwebp.a',
    ]

include = [
    '.',
    '../',
    '../include/',
    '../libsdl2/include',
    '../libpng',
    '../libwebp/src'
]

env.Library('sdl2-image', source,
    CPPPATH=env.get('CPPPATH')+include,
    CFLAGS='$CFLAGS $LIBCFLAGS -DBSD -D__YIYIYA__  '+cflags,
    LINKFLAGS= '$LINKFLAGS $USERLD')